# API
API_HTTP_PORT=4000
API_WS_PORT=4001

# LLM Bridge
LLM_API_BASE=http://llm-bridge:5000/v1
LLM_API_KEY=dummy-key
UPSTREAM_API_BASE= # 例如 https://api.deepseek.com （OpenAI 兼容）
