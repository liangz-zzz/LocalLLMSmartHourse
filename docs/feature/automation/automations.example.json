[
  {
    "id": "lr_to_br_long_stay",
    "name": "客厅离开→卧室进入→久未返回（示例）",
    "enabled": false,
    "trigger": {
      "type": "device",
      "deviceId": "binary_sensor.bedroom_motion",
      "traitPath": "traits.raw.state",
      "operator": "eq",
      "value": "on",
      "changed": true
    },
    "when": {
      "all": [
        {
          "deviceId": "binary_sensor.living_room_motion",
          "traitPath": "traits.raw.state",
          "operator": "eq",
          "value": "off"
        },
        {
          "deviceId": "binary_sensor.bedroom_motion",
          "traitPath": "traits.raw.state",
          "operator": "eq",
          "value": "on"
        }
      ]
    },
    "forMs": 600000,
    "cooldownMs": 3600000,
    "then": [{ "type": "scene", "sceneId": "lr_to_br_long_stay_scene" }]
  }
]

