generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Device {
  id           String        @id
  name         String
  placement    Json
  protocol     String
  bindings     Json
  capabilities Json
  semantics    Json?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  states       DeviceState[]
  actions      ActionResult[]
}

model DeviceState {
  id        String   @id @default(uuid())
  deviceId  String
  traits    Json
  createdAt DateTime @default(now())

  device Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)
}

model ActionResult {
  id        String   @id
  deviceId  String
  action    String
  status    String
  transport String
  reason    String?
  params    Json?
  createdAt DateTime @default(now())

  device Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  @@index([deviceId])
}
